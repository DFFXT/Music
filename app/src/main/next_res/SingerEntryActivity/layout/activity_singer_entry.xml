<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapseToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:statusBarScrim="@color/themeColor"
            app:contentScrim="@color/themeColor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_bigImage_detailMusicActivity"
                android:layout_width="@dimen/entryBigImageSize"
                android:layout_height="@dimen/entryBigImageSize"
                android:layout_gravity="center"
                android:src="@drawable/singer_default_icon" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <com.web.misc.TopBarLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topBar_startImage="@drawable/icon_back_black"
                    app:topBar_tint="@color/white"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.Guideline
                android:id="@+id/gl"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="20dp"/>
            <TextView
                android:id="@+id/tv_singerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_big"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                tools:text="xxxx" />
            <TextView
                android:id="@+id/tv_countryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_country"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_singerName"/>
            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_countryLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_countryLabel"
                app:layout_constraintEnd_toStartOf="@id/tv_downloadMusic"
                app:layout_constraintHorizontal_bias="0"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_birthLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_birth"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_countryLabel"/>
            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_birthLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_birthLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_constellationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_constellation"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_birthLabel"/>
            <TextView
                android:id="@+id/tv_constellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_constellationLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_constellationLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_companyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_owner"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_constellationLabel"/>
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_companyLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_companyLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_totalSongsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_totalSongs"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_companyLabel"/>
            <TextView
                android:id="@+id/tv_totalSongs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_totalSongsLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_totalSongsLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_totalAlbumsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_totalAlbums"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_totalSongsLabel"/>
            <TextView
                android:id="@+id/tv_totalAlbums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_totalAlbumsLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_totalAlbumsLabel"
                tools:text="1234567"
                />

            <TextView
                android:id="@+id/tv_totalMVLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_totalMv"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_totalAlbumsLabel"/>
            <TextView
                android:id="@+id/tv_totalMV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_totalMVLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_totalMVLabel"
                tools:text="1234567"
                />




            <TextView
                android:id="@+id/tv_introductionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_introduction"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/tv_totalMVLabel"/>
            <com.web.misc.ExpandableTextView
                android:id="@+id/ex_introduction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_introductionLabel"/>


            <android.support.constraint.Group
                android:id="@+id/group_musicReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="x_singerEntryLabel,tv_moreMusic,rv_singerEntry"/>
            <View
                android:id="@+id/v_songBg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/ex_introduction"
                app:layout_constraintBottom_toBottomOf="@id/rv_albumEntry"
                android:elevation="3dp"/>
            <TextView
                android:id="@+id/x_singerEntryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_musicAbout"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:elevation="3dp"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toTopOf="@id/v_songBg"/>
            <TextView
                android:id="@+id/tv_moreMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_more"
                android:textColor="@color/textColor_9"
                android:elevation="3dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/x_singerEntryLabel"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_singerEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="3dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/x_singerEntryLabel"/>


            <android.support.constraint.Group
                android:id="@+id/group_albumReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="x_singerAlbumLabel,tv_moreAlbum,rv_albumEntry"/>

            <TextView
                android:id="@+id/x_singerAlbumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_albumAbout"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:elevation="3dp"
                app:layout_constraintStart_toEndOf="@id/gl"
                app:layout_constraintTop_toBottomOf="@id/rv_singerEntry"/>
            <TextView
                android:id="@+id/tv_moreAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer_more"
                android:textColor="@color/textColor_9"
                android:elevation="3dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/x_singerAlbumLabel"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_albumEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="3dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/x_singerAlbumLabel"/>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>