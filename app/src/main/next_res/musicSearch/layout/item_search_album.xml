<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_artistIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@color/themeColor"/>
    <TextView
        android:id="@+id/tv_albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/iv_artistIcon"
        tools:text="Name"/>
    <TextView
        android:id="@+id/tv_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_small"
        android:layout_toStartOf="@id/tv_publishTimeLabel"
        android:layout_alignBottom="@id/iv_artistIcon"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_artistIcon"
        tools:text="1277777777777地点777777777"/>
    <TextView
        android:id="@+id/tv_publishTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_publishTime"
        android:layout_alignBottom="@id/tv_publishTime"
        android:textSize="@dimen/textSize_small"
        android:text="@string/musicDetailActivity_publishTime"/>
    <TextView
        android:id="@+id/tv_publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/textSize_small"
        android:layout_alignBottom="@id/iv_artistIcon"
        tools:text="12-12-21"/>
</RelativeLayout>