<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_marginBottom="8dp"
	android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/iv_videoIcon"
		android:layout_width="60dp"
		android:layout_height="60dp"
		tools:background="@drawable/singer_default_icon"/>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/iv_videoIcon"
		android:layout_alignTop="@id/iv_videoIcon"
		android:layout_alignBottom="@id/iv_videoIcon"
		android:layout_marginStart="10dp"
		android:gravity="center">
		<TextView
			tools:text="video Name"
			android:id="@+id/tv_videoName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/textSize_big"
			android:maxLines="2"
			android:ellipsize="end"
			android:marqueeRepeatLimit="marquee_forever"
			android:layout_gravity="start"
			/>

		<TextView
			tools:text="Singer Name"
			android:id="@+id/tv_videoArtist"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:ellipsize="end"
			android:layout_gravity="start"
			android:textSize="12sp"
			/>
	</LinearLayout>




</RelativeLayout>
