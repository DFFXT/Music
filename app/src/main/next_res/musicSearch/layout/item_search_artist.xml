<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.web.misc.RoundImageView
        android:id="@+id/iv_artistIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:iv_radius="5dp"
        tools:src="@color/themeColor"/>
    <TextView
        android:id="@+id/tv_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_normal"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        tools:text="Name"/>
    <TextView
        android:id="@+id/tv_singleMusicNumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/textSize_small"
        android:text="@string/singleMusic"/>
    <TextView
        android:id="@+id/tv_singleMusicNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="120dp"
        android:textSize="@dimen/textSize_small"
        tools:text="12"/>
    <TextView
        android:id="@+id/tv_albumNumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/textSize_small"
        android:text="@string/album"/>
    <TextView
        android:id="@+id/tv_albumNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        android:textSize="@dimen/textSize_small"
        tools:text="11"/>
    <TextView
        android:id="@+id/tv_district"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:textSize="@dimen/textSize_small"
        tools:text="中国"/>
</FrameLayout>