<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.web.moudle.search.ui.SearchView
        android:paddingTop="4dp"
        android:id="@+id/searchView_searchActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:searchView_hint="@string/searchView_hint"
        app:searchView_autoFocus="true"
        />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/textColor_9"
        android:textSize="@dimen/textSize_small"
        android:text="@string/searchView_desc"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_searchSug"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:clipToPadding="false"
        android:overScrollMode="never"/>
</LinearLayout>