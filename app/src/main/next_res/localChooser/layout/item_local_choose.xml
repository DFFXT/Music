<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="20dp"
    android:background="@drawable/selector_transparent_gray"
    xmlns:tools="http://schemas.android.com/tools">
    <com.web.misc.RoundImageView
        android:id="@+id/iv_fileIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        tools:src="@drawable/album_sug_icon"/>
    <LinearLayout
        android:id="@+id/layout_"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_fileIcon"
        android:layout_toStartOf="@id/tv_date">
        <TextView
            android:id="@+id/tv_fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/textColor_6"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="文件名称"/>
        <TextView
            android:id="@+id/tv_tagStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_min"
            android:textColor="@color/textColor_9"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            tools:text="tag1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textSize_min"
        android:textColor="@color/textColor_9"
        tools:text="12-12"/>
</RelativeLayout>