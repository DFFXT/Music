<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:text="shenHua"/>
    <TextView
        android:id="@+id/tv_hasMv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_albumName"
        android:layout_marginStart="10dp"
        android:background="@drawable/radius_border_4dp"
        android:layout_centerVertical="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/albumEntry_MV"/>
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_pause_white"
        android:tint="@color/black"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        tools:text="00:00"/>
</RelativeLayout>