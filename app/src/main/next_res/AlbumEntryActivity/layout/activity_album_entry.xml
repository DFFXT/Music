<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapseToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:statusBarScrim="@color/themeColor"
            app:contentScrim="@color/themeColor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_bigImage_detailMusicActivity"
                android:layout_width="@dimen/entryBigImageSize"
                android:layout_height="@dimen/entryBigImageSize"
                android:layout_gravity="center"
                android:src="@drawable/singer_default_icon" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <com.web.misc.TopBarLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topBar_startImage="@drawable/icon_back_black"
                    app:topBar_tint="@color/white"/>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_musicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_big"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                tools:text="xxxx" />
            <TextView
                android:id="@+id/tv_mainSingerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_mainSinger"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_musicName"/>
            <TextView
                android:id="@+id/tv_mainSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_mainSingerLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_mainSingerLabel"
                app:layout_constraintEnd_toStartOf="@id/tv_downloadMusic"
                app:layout_constraintHorizontal_bias="0"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_durationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_styles"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mainSingerLabel"/>
            <TextView
                android:id="@+id/tv_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_durationLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_durationLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_albumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_album"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_durationLabel"/>
            <TextView
                android:id="@+id/tv_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_albumLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_albumLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_publishTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_publishTime"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_albumLabel"/>
            <TextView
                android:id="@+id/tv_publishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_publishTimeLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_publishTimeLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_publishCompanyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_publishCompany"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_publishTimeLabel"/>
            <TextView
                android:id="@+id/tv_publishCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_publishCompanyLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_publishCompanyLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_listenTimesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_listenTimes"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_publishCompanyLabel"/>
            <TextView
                android:id="@+id/tv_listenTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_listenTimesLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_listenTimesLabel"
                tools:text="1234567"
                />


            <TextView
                android:id="@+id/tvx_infoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/singer_introduction"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_listenTimesLabel"/>
            <com.web.misc.ExpandableTextView
                android:id="@+id/ex_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvx_infoLabel"/>


            <TextView
                android:id="@+id/tv_albumListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/albumEntry_albumList"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ex_introduction"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_albumList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="true"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_albumListLabel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>