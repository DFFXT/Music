<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapseToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:statusBarScrim="@color/themeColor"
            app:contentScrim="@color/themeColor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_bigImage_detailMusicActivity"
                    android:layout_width="@dimen/entryBigImageSize"
                    android:layout_height="@dimen/entryBigImageSize"
                    android:layout_gravity="center"
                    android:src="@drawable/singer_default_icon" />
                <ImageView
                    android:id="@+id/iv_playIconSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/textColor_3"
                    android:src="@drawable/icon_pause_white"/>
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <com.web.misc.TopBarLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:topBar_startImage="@drawable/icon_back_black"
                    app:topBar_tint="@color/white"/>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_musicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_big"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_addToWait"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constrainedWidth="true"
                android:layout_marginTop="10dp"
                tools:text="xxxx" />
            <TextView
                android:id="@+id/tv_mainSingerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_mainSinger"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_musicName"/>
            <TextView
                android:id="@+id/tv_mainSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_mainSingerLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_mainSingerLabel"
                app:layout_constraintEnd_toStartOf="@id/tv_addToWait"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constrainedWidth="true"
                tools:text="1234567dddddddddddddddddddddd"
                />
            <TextView
                android:id="@+id/tv_durationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_durationLabel"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mainSinger"/>
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_durationLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_durationLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_albumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_album"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_durationLabel"/>
            <TextView
                android:id="@+id/tv_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_albumLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_albumLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_publishTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_publishTime"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_albumLabel"/>
            <TextView
                android:id="@+id/tv_publishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_publishTimeLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_publishTimeLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_publishCompanyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_publishCompany"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_publishTimeLabel"/>
            <TextView
                android:id="@+id/tv_publishCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_publishCompanyLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_publishCompanyLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_listenTimesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_listenTimes"
                android:layout_marginTop="@dimen/musicDetailActivity_descMarginTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_publishCompanyLabel"/>
            <TextView
                android:id="@+id/tv_listenTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_small"
                app:layout_constraintStart_toEndOf="@id/tv_listenTimesLabel"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_listenTimesLabel"
                tools:text="1234567"
                />
            <TextView
                android:id="@+id/tv_downloadMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/downlod_diy"
                android:drawablePadding="20dp"
                android:drawableTint="@color/themeColor"
                android:background="@drawable/radius_border_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_musicName"
                tools:text="6.93MB"/>
            <TextView
                android:id="@+id/tv_addToWait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/downlod_diy"
                android:layout_marginEnd="4dp"
                android:drawablePadding="20dp"
                android:drawableTint="@color/themeColor"
                android:background="@drawable/radius_border_4dp"
                app:layout_constraintEnd_toStartOf="@id/tv_downloadMusic"
                app:layout_constraintTop_toTopOf="@id/tv_musicName"
                android:text="@string/musicDetailActivity_addToWait"/>
            <TextView
                android:id="@+id/lyricsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/musicDetailActivity_lyrics"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_big"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_listenTimesLabel"/>
            <com.web.misc.ExpandableTextView
                android:id="@+id/lyricsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:background="@color/white"
                android:drawableBottom="@drawable/download"
                app:layout_constraintTop_toBottomOf="@id/lyricsLabel"/>

            <TextView
                android:id="@+id/tv_commentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_big"
                android:text="@string/musicDetailActivity_comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lyricsView"
                />
            <TextView
                android:id="@+id/tv_commentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/textSize_normal"
                tools:text="122"
                app:layout_constraintStart_toEndOf="@id/tv_commentLabel"
                app:layout_constraintBottom_toBottomOf="@id/tv_commentLabel"
                />

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srl_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:srlEnableRefresh="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_commentLabel">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never">

                </androidx.recyclerview.widget.RecyclerView>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            <FrameLayout
                android:id="@+id/layout_noMoreData"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/gray"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/srl_comment">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/question_mark_icon"/>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>