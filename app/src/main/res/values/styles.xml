<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/themeColor</item>

        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <item name="actionMenuTextColor">@color/white</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogTransparentAround" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/gray</item>
    </style>
    <style name="Alert.transparent" parent="Alert">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="FullscreenTheme" parent="AppStyle">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    
    
    <style name="search_focus">
        <item name="android:textColor">@color/themeColor</item>
    </style>
    <style name="searchResultNumber">
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

</resources>
