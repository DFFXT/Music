<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AppStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="DialogTransparentAround" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/gray</item>
    </style>

</resources>
