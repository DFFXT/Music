<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/white"
	android:id="@+id/parent"
     >
    <RelativeLayout 
        android:id="@+id/setting_barBox"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
	    android:background="@color/deepDark"
    	android:fitsSystemWindows="true"
        >
        <TextView 
	        android:id="@+id/settings_titleBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_titleBar"
	        android:textColor="@color/white"
	        android:gravity="start|center_vertical"
	        android:paddingStart="@dimen/paddingTop"
			android:paddingEnd="0dp"
	        android:paddingTop="@dimen/padding_10"
	        android:paddingBottom="@dimen/padding_10"
	        android:textSize="@dimen/titleBar_textSize"
	        />
    </RelativeLayout>
	    
    <Button 
	    android:id="@+id/settings_saveSettings"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/but_1" 
	    android:text="@string/yes"/>
    <RelativeLayout
		android:focusable="true"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/setting_barBox"
    	android:paddingStart="@dimen/paddingTop"
		android:paddingEnd="0dp"
		android:paddingTop="30dp"
    	android:layout_above="@id/settings_saveSettings">
		<LinearLayout
			android:orientation="vertical"
			android:id="@+id/suffixBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

    </RelativeLayout>
	

</RelativeLayout>
