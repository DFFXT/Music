<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_playType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/card_play"
        app:layout_constraintBottom_toBottomOf="@id/card_play"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="2dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/iv_playType"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/music_type_all_loop"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/card_play"
        app:layout_constraintBottom_toBottomOf="@id/card_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="2dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dot"
            android:padding="5dp"
            />
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:cardElevation="3dp">
        <ImageView
            android:id="@+id/iv_play"
            android:background="@color/gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/themeColor"
            android:src="@drawable/icon_pause_white_fill"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/card_play"
        app:layout_constraintTop_toTopOf="@id/card_play"
        app:layout_constraintBottom_toBottomOf="@id/card_play"
        android:layout_marginEnd="30dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">
        <ImageView
            android:id="@+id/next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_next_white_fill"
            android:tint="@color/themeColor"
            android:background="@color/gray"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/card_play"
        app:layout_constraintTop_toTopOf="@id/card_play"
        app:layout_constraintBottom_toBottomOf="@id/card_play"
        android:layout_marginEnd="30dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">
        <ImageView
            android:id="@+id/pre"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_pre_white_fill"
            android:tint="@color/themeColor"
            android:background="@color/gray"
            />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>