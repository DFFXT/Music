<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_artistIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        android:layout_marginTop="80dp"
        app:cardUseCompatPadding="false"
        app:cardElevation="8dp"
        app:cardCornerRadius="130dp">
        <ImageView
            android:id="@+id/iv_artistIcon"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:src="@drawable/singer_default_icon"/>
        <com.web.misc.RoundImageView
            android:id="@+id/riv_wave"
            android:layout_width="260dp"
            android:layout_height="260dp"
            app:iv_type="circle"
            app:layout_constraintTop_toTopOf="@id/card_artistIcon"
            app:layout_constraintStart_toStartOf="@id/card_artistIcon"
            />
    </androidx.cardview.widget.CardView>
    <com.web.misc.RoundImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@color/gray"
        app:iv_type="circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        android:layout_marginTop="70dp"/>



    <com.web.moudle.lyrics.LyricsView
        android:id="@+id/lv_lyrics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_artistIcon"
        app:layout_constraintBottom_toTopOf="@id/layout_musicControl">
    </com.web.moudle.lyrics.LyricsView>
    <com.web.misc.TopBarLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:topBar_startImage="@drawable/icon_back_black"
        app:topBar_endImage="@drawable/unlock"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:topBar_mainTitleText="Music name"
        android:background="@color/white"/>


    <ImageView
        android:id="@+id/iv_musicEffect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sound_effectg"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitStart"
        android:background="@color/white"
        android:elevation="13dp"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_musicControl">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/download"
            android:tint="@color/themeColor"
            android:padding="10dp"
            />
    </androidx.cardview.widget.CardView>


    <include
        android:id="@+id/layout_musicControl"
        layout="@layout/music_control_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

