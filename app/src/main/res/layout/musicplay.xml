<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/mianLayout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
     >
     
     <TextView
        android:id="@+id/local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/local"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
         />
     <TextView 
        android:id="@+id/musicplay_serverMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/musicplay_gedan"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/local"
         />
     <ImageView 
         android:id="@+id/download"
         android:layout_width="wrap_content"
       	 android:layout_height="wrap_content"
       	 android:layout_alignParentEnd="true"
       	 android:src="@drawable/download"
       	 android:layout_alignBottom="@id/local"
       	 android:layout_alignTop="@id/local"
       	 android:contentDescription="@string/action_settings"
         />
     <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBottom="@id/local"
        android:layout_toStartOf="@id/download"
        android:text="@string/search"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="18sp" />
     
     <EditText
        android:id="@+id/searchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/search"
        android:layout_toStartOf="@id/search"
        android:layout_toEndOf="@id/musicplay_serverMusic"
        android:gravity="center"
        android:layout_alignBottom="@id/local"
        android:background="@android:color/transparent"
        android:textSize="18sp" />
     <View 
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/local"
        android:background="@color/lightBlue"
        android:layout_marginTop="10dp"
         />
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="60dp"
		    android:layout_alignParentBottom="true"
		    android:id="@+id/op"
		    >
		   
		    <TextView 
		        android:id="@+id/songname"
		        android:layout_width="150dp"
		        android:layout_height="20dp" 
		        android:textSize="18sp"
		        android:gravity="center_vertical"
				android:paddingStart="10dp"
				android:paddingEnd="0dp"
		        />
		    <TextView 
		       android:id="@+id/singer"
		        android:layout_width="150dp"
		        android:layout_height="20dp" 
		        android:textSize="14sp"
		        android:gravity="center_vertical"
		        android:layout_below="@id/songname"
		        android:paddingStart="10dp"
		        android:paddingEnd="0dp"
		        />
		    <ImageView 
		        android:id="@+id/pre"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:src="@drawable/pre"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:contentDescription="@null"
		        />
		    

		    <ImageView
		        android:id="@+id/pause"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:layout_centerVertical="true"
		        android:layout_marginStart="21dp"
		        android:layout_toEndOf="@+id/pre"
		        android:contentDescription="@null"
		        android:src="@drawable/pause" />
			<ImageView 
		        android:id="@+id/next"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:src="@drawable/next"
		        android:layout_centerVertical="true"
		        android:layout_toEndOf="@id/pause"
		        android:layout_marginStart="10dp"
		        android:contentDescription="@null"
		        />
			<ImageView
			    android:id="@+id/musicplay_type"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_alignParentEnd="true"
			    android:layout_centerVertical="true"
			    android:src="@drawable/loopall"
			    android:contentDescription="@null"
			    />
		</RelativeLayout>
   
	<SeekBar
	    android:id="@+id/bar"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/op"
		style="@android:style/Widget.Holo.SeekBar"
        />
	<ListView
	    android:id="@+id/playList"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/bar"
	    android:layout_below="@id/line"
	    android:listSelector="@drawable/listselector"
	    />
	<RelativeLayout
         android:id="@+id/subSettingBox"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/dark_transparent"
         android:layout_alignParentTop="true"
         android:layout_alignParentStart="true"
         android:gravity="start"
         android:visibility="gone"
         >
		<ImageView 
		    android:id="@+id/musicplay_settingIcon"
		    android:layout_width="80dp"
		    android:layout_height="80dp"
		    android:src="@drawable/setting"
		    android:contentDescription="@string/action_settings"
		    android:layout_marginTop="10dp"
		    android:layout_marginStart="35dp"
		    />
         <Button 
             android:id="@+id/item_login"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/musicplay_settingIcon"
             android:minWidth="150dp"
             android:text="@string/musiclog_log"
             android:background="@drawable/but_1"
             android:textColor="@color/white"
             android:textSize="18sp"
             />
         <Button 
             android:id="@+id/item_setting1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/item_login"
             android:minWidth="150dp"
             android:text="@string/setting"
             android:background="@drawable/but_1"
             android:textColor="@color/white"
             android:textSize="18sp"
             />
         <Button 
             android:id="@+id/item_setting2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:minWidth="150dp"
             android:layout_below="@id/item_setting1"
             android:text="@string/getlist"
             android:background="@drawable/but_1"
             android:textColor="@color/white"
             android:textSize="18sp"
             />
         <Button 
             android:id="@+id/item_setting3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:minWidth="150dp"
             android:layout_below="@id/item_setting2"
             android:text="@string/action_settings"
             android:background="@drawable/but_1"
             android:textColor="@color/white"
             android:textSize="18sp"
             />
     </RelativeLayout>
	<ListView 
	    android:id="@+id/lyrics_listView"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bar"
        android:layout_below="@id/line"
        android:visibility="gone"
        android:background="@android:color/darker_gray"
        android:divider="@null"
        android:scrollbars="none"
        android:listSelector="@color/transparent"
	    />
	<View 
        android:id="@+id/line_lyrics"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/lyrics_listView"
        android:background="@color/lightBlue"
        android:layout_marginBottom="-100dp"
        android:visibility="gone"
         />
	<LinearLayout 
		android:id="@+id/musicplay_spinnerBox"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_above="@id/bar"
        android:layout_below="@id/line"
	    android:visibility="gone"
	    android:background="@color/gray"
	>
	     <HorizontalScrollView 
		    android:id="@+id/musicplay_songmenu_iv_box"
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/gray"
	        android:divider="@null"
	        android:scrollbars="none"
	        android:listSelector="@drawable/listselector"
	    >
	        <LinearLayout 
	          	android:id="@+id/musicplay_songmenu"
		    	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:orientation="horizontal"
	            >
	            
	        </LinearLayout> 
	     </HorizontalScrollView>
	    <ListView 
		    android:id="@+id/musicplay_songmenuList"
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@null"
	        android:scrollbars="none"
	        android:listSelector="@drawable/listselector"
	    />
	</LinearLayout>
	    
	
</RelativeLayout>
