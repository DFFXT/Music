<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        />
    <SeekBar
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        app:layout_constraintEnd_toStartOf="@id/tv_duration"
        style="@android:style/Widget.Holo.SeekBar"
        />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/textSize_small"
        android:textColor="@color/textColor_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        tools:text="3:44"/>

    <ImageView
        android:id="@+id/pre"
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/icon_pre_black"
        app:layout_constraintBottom_toBottomOf="@id/musicOrigin"
        app:layout_constraintEnd_toStartOf="@id/pause"
        app:layout_constraintTop_toBottomOf="@id/bar" />
    <ImageView
        android:id="@+id/pause"
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/icon_pause_black"
        app:layout_constraintTop_toTopOf="@id/pre"
        app:layout_constraintBottom_toBottomOf="@id/pre"
        app:layout_constraintEnd_toStartOf="@id/next"/>
    <ImageView
        android:id="@+id/next"
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:src="@drawable/icon_next_black"
        android:padding="10dp"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="@id/pause"
        app:layout_constraintBottom_toBottomOf="@id/pause"
        app:layout_constraintEnd_toStartOf="@id/musicplay_type"
        />
    <ImageView
        android:id="@+id/musicplay_type"
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:src="@drawable/music_type_one_loop"
        android:contentDescription="@null"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/next"
        app:layout_constraintBottom_toBottomOf="@id/next"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ImageView
        android:id="@+id/iv_singerIcon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/singer_default_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/musicOrigin"/>


    <TextView
        android:id="@+id/songname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_big"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/pre"
        app:layout_constraintStart_toEndOf="@+id/iv_singerIcon"
        app:layout_constraintTop_toBottomOf="@id/bar"
        />

    <TextView
        android:id="@+id/singer"
        android:layout_width="0dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_below="@id/songname"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/textSize_small"
        android:layout_marginStart="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/pre"
        app:layout_constraintStart_toEndOf="@+id/iv_singerIcon"
        app:layout_constraintTop_toBottomOf="@id/songname"
        />
    <TextView
        android:id="@+id/musicOrigin"
        android:textSize="12sp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_singerIcon"
        app:layout_constraintTop_toBottomOf="@id/singer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>