<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/white"
	android:id="@+id/parent"
     >
    <com.web.misc.TopBarLayout
		android:id="@+id/topBar_setting"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="true"
		android:background="@color/themeColor"
		android:elevation="1dp"
		app:topBar_startImage="@drawable/icon_back_black"
		app:topBar_mainTitleText="@string/setting"/>
	    
    <Button 
	    android:id="@+id/settings_saveSettings"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/but_1" 
	    android:text="@string/yes"/>
    <RelativeLayout
		android:focusable="true"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/topBar_setting"
    	android:paddingStart="@dimen/paddingTop"
		android:paddingEnd="0dp"
		android:paddingTop="30dp"
    	android:layout_above="@id/settings_saveSettings">
		<LinearLayout
			android:orientation="vertical"
			android:id="@+id/suffixBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

    </RelativeLayout>
	

</RelativeLayout>
