<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/item_parent"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bottom_dashline_1px"
	android:padding="10dp">
  	
  	<ImageView 
  	    android:id="@+id/iv_play"
  	    android:layout_width="50dp"
  	    android:layout_height="wrap_content"
  	    android:layout_centerVertical="true"
  	    android:layout_alignParentEnd="true"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
  	    android:src="@drawable/icon_pause_white"
		android:tint="@color/black"
		tools:ignore="ContentDescription" />

  	<TextView
  	    android:id="@+id/musicName" 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:textSize="20sp"
  	    android:layout_toStartOf="@id/iv_play"
  	    android:layout_alignParentStart="true"
		android:maxLines="2"
		android:ellipsize="end"
		tools:text="Music Name"
  	    />
  	<TextView
  	    android:id="@+id/tv_albumName"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:textSize="16sp"
  	    android:layout_below="@id/musicName"
		android:maxLines="1"
		android:maxWidth="200dp"
		android:ellipsize="end"
		tools:text="Album Name"
  	    />
  	<TextView
  	    android:id="@+id/tv_singerName"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:textSize="16sp"
		android:layout_marginStart="10dp"
  	    android:layout_toEndOf="@id/tv_albumName"
  	    android:layout_alignBottom="@id/tv_albumName"
		android:layout_toStartOf="@id/iv_play"
		android:maxLines="1"
		android:ellipsize="end"
		tools:text="Singer Name"
  	    />
</RelativeLayout>
